<%- include('header')%>

<style>
    table{
        width:600px;
        text-align: center;
        padding:5px;
    }
    .b1{
        background-color: rgb(82, 80, 80);
    }
    .b2{
        background-color: rgb(167, 46, 46); 
    }
    a{
        color: white;
    }
</style>

<h1 align="center" class="text-center m-5" > All User Register in E-commerce App </h1>
<table border="5" align="center" >
    <tr style="background-color: rgba(138, 112, 112,0.4)">
        <th>No.</th>
        <th>Name.</th>
        <th>E-mail.</th>
        <th>Password.</th>
        <th>Phone No.</th>
        <th>update</th>
        <th>delete</th>
    </tr>
    <% data.forEach(data =>{ %>
        <tr>
            <td><%= data._id %></td>
            <td><%= data.name %></td>
            <td><%= data.email %></td>
            <td><%= data.password %></td>
            <td><%= data.number %></td>
            <td><button class="b1" >update</button></td>
            <td><button class="b2" ><a href="/admin/remove/delete_user/<%= data._id %>">delete</a></button></td>
        </tr>
    <% }) %>    
</table>

<%- include('footer')%>